<% content_for :title do %>New Meeting<% end %>
<div class="row">
  <div class="large-12 columns">
    <h3>New Meeting</h3>
  </div>
</div>
<div class="row">
  <div class="large-8 columns">
    <div class="panel">
     <div class="form">
       <%= simple_form_for @meeting do |f| %>
         <%= f.error_notification %>
         <%= f.association :group, :include_blank => "(No Group)" %>
         <%# TODO: have name populate with group name if group is chosen %>
         <%= f.input :name %>
         <%= f.input :facility %>
         <%= f.input :street %>
         <%= f.input :city %>
         <%= f.hidden_field :province, collection: Meeting.provinces.collect {|k,v| [k.upcase,k]}, selected: 'on' %>
         <%= f.input :weekday, label: 'Day', collection: Meeting.weekdays.collect {|k,v| [k.titleize,k]} %>
         <%= f.input :time_str, label: 'Time' %>
         <%= f.input :category, collection: Meeting.categories.collect {|k,v| [k.titleize,k]} %>
         <%= f.input :format, collection: Meeting.formats.collect {|k,v| [k.titleize,k]} %>
         <%= f.input :frequency, collection: Meeting.frequencies.collect {|k,v| [k.titleize,k]} %>
         <%= f.input :accessible, label: 'Wheelchair access' %>
         <%= f.input :notice %>
         <%= f.button :submit %>
       <% end %>
     </div>
    </div>
  </div>
</div>
