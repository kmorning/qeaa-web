<% content_for :title do %>Member<% end %>
<div class="row">
  <div class="large-12 columns">
    <h3>Edit Member</h3>
  </div>
</div>
<div class="row">
  <div class="large-8 columns">
    <div class="panel">
     <div class="form">
       <%= simple_form_for @member, method: :patch do |f| %>
         <%= f.error_notification %>
         <%# TODO: enforce members can't change their name %>
         <%# f.input :first_name %>
         <%# f.input :last_initial %>
         <%# TODO: Enforce members can't change their group %> 
         <%# f.association :group %>
         <%= f.input :phone %>
         <%= f.simple_fields_for :member_emails do |me| %>
           <%= me.input :email %>
         <% end %>
         <%# f.input :email %>
         <%= f.input :birthday %>
         <%= f.button :submit %>
       <% end %>
     </div>
    </div>
  </div>
</div>
