<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Qeaa Web" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Qeaa Web" %>">
    <meta name="google-site-verification" content="1DeX6lMB-tE6jkVAOFL0RBC4MeSvGMoMbKfTLlyyBs4" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%# Modernizr is required for Zurb Foundation %>
    <%= javascript_include_tag 'vendor/modernizr' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag image_path('favicon.ico') %>
  </head>
  <body <%= "id=#{params[:id]}" if params[:id].present? %> class="<%= controller_name %> <%= action_name %>">
    <div class="wrapper">
      <header>
        <%= render 'layouts/header' %>
        <%# render 'layouts/test_header' %>
      </header>
      <main role="main">
         <%= render 'layouts/messages' %>
         <%= yield %>
      </main>
      <footer>
        <%= render 'layouts/footer' %>
      </footer>
    </div>
  </body>
</html>
